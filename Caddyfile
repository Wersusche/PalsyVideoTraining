palsy-training.ru {
    @api path /api/*
    reverse_proxy @api backend:8000

    # Раздаём собранный фронтенд
    root * /srv

    # Сжатие
    encode zstd gzip

    # SPA fallback: если файла нет — отдаём index.html
    try_files {path} /index.html

    # Включаем файловый сервер
    file_server
}
